<h2>Players</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Avatar</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Draws</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.find_each do |user| %>
      <tr>
        <td><%= link_to "#{user.name}", user_path(user.id) %></td>
        <td><%=image_tag user.user_image %></td>
        
        
        <!-- <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        
        <td> <%=  Match.where(winner_id: user.id).count
 %> </td>
        <td> <%= Match.where(loser_id: user.id).count %></td>
  
        <td><%= (Match.where("player_x_id=? or player_o_id=?", user.id, user.id)).where(status: "draw").count
 %></td>

       
       
       
      </tr>
    <% end %>
  </tbody>
</table>


<br>


